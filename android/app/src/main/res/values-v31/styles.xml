<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Launch theme used on Android 12+ (API 31+) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- لمنع تطبيق الوضع الليلي -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- لا تجعل التطبيق يظهر ملء الشاشة -->
        <item name="android:windowFullscreen">false</item>
        <!-- لا ترسم خلفية للنظام أعلى التطبيق -->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <!-- استغلال المنطقة حول النوتش -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- خلفية شاشة السبلاتش -->
        <item name="android:windowSplashScreenBackground">#1C1C1C</item>
        <!-- خلفية الأيقونة -->
        <item name="android:windowSplashScreenIconBackgroundColor">#1C1C1C</item>
    </style>
</resources>
